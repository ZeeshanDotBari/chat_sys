            "url": {
              "raw": "{{base_url}}/api/auth/refresh",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "refresh"]
            },
            "description": "Refresh the access token using a refresh token. Automatically updates accessToken in collection variables."
          },
          "response": []
        }
